<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.six.myresume.MainActivity" >

    <!-- 头部开始 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#bce7f3"
        android:orientation="horizontal"
        android:padding="8dp" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/me" />
        <!-- 右边信息部分开始 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="姓名：李华斌"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="专业：计算机应用技术" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="求职意向：安卓开发工程师" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:onClick="doCall"
                android:text="电话：18819352783" />
        </LinearLayout>
        <!-- 右边信息部分结束 -->

    </LinearLayout>
    <!-- 头部结束 -->


    <!-- 主体开始 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#f8f1e1"
        android:orientation="vertical" >

        <!-- 第一行开始 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/AboutME"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="click"
                android:scaleType="fitCenter"
                android:src="@drawable/aboutme" />

            <ImageView
                android:id="@+id/MyObject"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="click"
                android:scaleType="fitCenter"
                android:src="@drawable/myobject" />

            <ImageView
                android:id="@+id/Awards"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="click"
                android:scaleType="fitCenter"
                android:src="@drawable/awards" />
        </LinearLayout>
        <!-- 第一行结束 -->
        <!-- 第一行文本开始 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/AboutMeText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="click"
                android:text="我的资料"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/MyObjectText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="click"
                android:text="参与项目"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/AwardsText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="click"
                android:text="在校情况"
                android:textAlignment="center" />
        </LinearLayout>
        <!-- 第一行文本结束 -->


        <!-- 第二行开始 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/Certificate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="click"
                android:scaleType="fitCenter"
                android:src="@drawable/certificate" />

            <ImageView
                android:id="@+id/AbouteDucation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="click"
                android:scaleType="fitCenter"
                android:src="@drawable/callme" />

            <ImageView
                android:id="@+id/CallMe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="click"
                android:scaleType="fitCenter"
                android:src="@drawable/abouteducation" />
        </LinearLayout>
        <!-- 第二行结束 -->
        <!-- 第二行文本开始 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" >

            <TextView
                android:id="@+id/CertificateText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="资格证书"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/AbouteDucationText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="联系我"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/CallMeText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="关于"
                android:textAlignment="center" />
        </LinearLayout>
        <!-- 第二行文本结束 -->

    </LinearLayout>
    <!-- 主体结束 -->

</LinearLayout>